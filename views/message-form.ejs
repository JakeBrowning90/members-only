<!DOCTYPE html>
<html>
  <%- include("./partials/head"); %>
  <body>
    <%- include("./partials/header"); %>
    <main>
      <h1><%= title %></h1>

      <% if (locals.errors) { %>
        <ul>
          <% for (let i = 0; i < locals.errors.length; i++) { %>
            <li>
              <%= locals.errors[i].msg %>
            </li>
          <% } %>
        </ul>
      <% } %>

      <form action="" method="POST" class="pageForm">
        <div class="formSection">
          <label for="title">Title:</label>
          <input name="title" 
                type="text" 
                maxlength="100" 
                required>
        </div>
        <div class="formSection">
          <label for="body">Body:</label>
          <textarea 
                name="body" 
                type="text" 
                maxlength="1000"
                rows="10" 
                required>
          </textarea>
        </div>

        <button>Submit</button>
      </form>
    </main>
    <%- include("./partials/footer"); %>
  </body>
</html>