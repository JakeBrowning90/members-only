<!DOCTYPE html>
<html>
  <%- include("./partials/head"); %>
  <body>
    <%- include("./partials/header"); %>
    <main>
      <h1><%= title %></h1>

      <% if (locals.errors) { %>
        <ul>
          <% for (let i = 0; i < locals.errors.length; i++) { %>
            <li>
              <%= locals.errors[i].msg %>
            </li>
          <% } %>
        </ul>
      <% } %>

      <form action="" method="POST">
        <label for="title">Title:</label>
        <input name="title" 
              type="text" 
              maxlength="100" 
              required
        >
        <label for="body">Body:</label>
        <textarea 
              name="body" 
              type="text" 
              maxlength="1000"
              rows="10" 
              required
        >
        </textarea>
        <button>Submit</button>
      </form>
    </main>
  </body>
</html>